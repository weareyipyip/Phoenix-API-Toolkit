        },
        {
            "label": "(Docker) Elixir 1.7 IEx",
            "type": "shell",
            "command": "docker-compose run --rm phoenix_api_toolkit_1_7",
        },
        {
            "label": "(Docker) Elixir 1.9 test in running instance",
            "type": "shell",
            "command": "docker-compose exec phoenix_api_toolkit_1_9 mix test",
            "group": "test",
        },
        {
            "label": "(Docker) Elixir 1.7 test in running instance",
            "type": "shell",
            "command": "docker-compose exec phoenix_api_toolkit_1_7 mix test",
            "group": "test",
        },
        {
            "label": "(Docker) Test",
            "type": "shell",
            "command": "docker-compose up",
            "group": "test",
        },
        {
            "label": "(Local) IEx",
            "type": "shell",
            "command": "iex -S mix",
            "group": {
                "kind": "build",
                "isDefault": true,
            },
        },
        {
            "label": "(Local) Test",
            "type": "shell",
            "command": "mix test",
            "group": {
                "kind": "test",
                "isDefault": true,
            },
        },
